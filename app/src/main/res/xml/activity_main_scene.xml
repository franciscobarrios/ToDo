<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:autoTransition="animateToEnd"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:motionInterpolator="easeInOut">

        <KeyFrameSet>

            <KeyAttribute
                android:translationY="150dp"
                motion:framePosition="0"
                android:rotation="0"
                motion:motionTarget="@+id/fab_new_task" />

            <KeyAttribute
                android:translationY="-45dp"
                motion:framePosition="50"
                motion:motionTarget="@+id/fab_new_task" />

            <KeyAttribute
                android:translationY="15dp"
                motion:framePosition="75"
                android:rotation="1080"
                motion:motionTarget="@+id/fab_new_task" />

            <KeyAttribute
                android:translationY="0dp"
                motion:framePosition="90"
                motion:motionTarget="@+id/fab_new_task" />

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="0"
                motion:motionTarget="@+id/nav_view" />

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="33"
                motion:motionTarget="@+id/nav_view" />

            <KeyAttribute
                android:alpha="1"
                motion:framePosition="100"
                motion:motionTarget="@+id/nav_view" />

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent" />

        <Constraint
            android:id="@+id/fab_new_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/nav_host_fragment"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:transitionEasing="linear" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/nav_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent" />

        <Constraint
            android:id="@+id/fab_new_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/nav_host_fragment"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            motion:layout_constraintVertical_bias="0.0"
            android:layout_height="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toTopOf="@+id/nav_view"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/nav_host_fragment" />

    </ConstraintSet>

</MotionScene>